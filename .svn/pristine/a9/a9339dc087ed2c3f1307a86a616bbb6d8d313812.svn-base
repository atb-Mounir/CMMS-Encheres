<%@ include file="../fragments/head.jsp" %>
<%@ include file="../fragments/nav.jsp" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="C" %>

<body>
<div class="container">
  <!-- Content here -->

<div class="card-deck ">
  <div class="card border-0">
    <img class="card-img-top" src="${pageContext.request.contextPath}/img/chateau.jpg" alt="Card image cap">
  </div>
  <div class="card border-0">
    <div class="card-body">
      <h4 class="card-title">
      
      <!-- CONDITION POUR L AFFICHAGE DU GAGNANT A REALISER	-->
      	${nomDuGagnantDesEncheres } a remporté l'enchère
      </h4>
					<section class="card-text">
					<div class="col align-self-center">
						<table class="table">
							<thead>
								
								<tr>
									<th scope="col">
										
									${NomCategorie}
									</th>
									<th scope="col">${nomArticleVendu }</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>Description:</td>
									<td>${descritpionArticleVendu}</td>
								</tr>
								<tr>
									<td>Meilleur offre:</td>
									<td>${meilleurOffre }</td>
								</tr>
								<tr>
									<td>Mise à prix:</td>
									<td>${miseAprix }</td>
								</tr>
								<!-- ligne presente seulement dans la page detail vente	-->
								<tr id="deitailVente">
									<td>Fin de l'enchère:</td>
									<td>${dateFinEnchere }</td>
								</tr>
								<tr>
									<td>Retrait:</td>
									<td>
										${rueRetraitArticle }
										${cPRetraitArticle }
										${villeRetraitArticle }
									</td>
								</tr>
								<tr>
									<td>Vendeur:</td>
									<td>${pseudoVendeur }</td>
								</tr>
								<tr>
									<td id="remporteVente">tel:</td>
									<td>${telephoneVendeur }</td>
								</tr>
								<tr>
								<!-- ligne presente seulement dans la page detail vente	-->
									<td id="deitailVente">Ma proposition:</td>
									<td>${prixArticleEnCour }</td>
										<td><div class="input-group mb-3">
										<!-- Pensez à modifier le nom des variable indiquant le prix actuel du prix de l'article	-->
												<input type="number" 
												min="${prixArticleEnCour }"
												max="${pointDisponibleAdherent }"
												 class="form-control"
													placeholder="Recipient's username"
													aria-label="Recipient's username"
													aria-describedby="basic-addon2">
												<div class="input-group-append">
												<!-- bouton permettant de valider la surenchère-->
													<button class="btn btn-outline-secondary" type="submit">Enchérir</button>
												</div>
											</div></td>
									</tr>
								<tr>
									<td class="text-center" colspan="2"><a
										class="justify-self-center btn btn-primary"
										href="<%=request.getContextPath() %>/Accueil" role="button">Back</a>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					</section>
				</div>
  </div>
</div>
</div>	
	
	<%@ include file="../fragments/footer.jsp" %>
	<%@ include file="../fragments/script.jsp" %>
</body>
</html>